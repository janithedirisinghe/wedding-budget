generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  fullName     String?
  partnerName  String?
  email        String?  @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  budgets Budget[]
}

model Budget {
  id          String    @id @default(cuid())
  userId      String
  name        String
  coupleNames String
  eventDate   DateTime
  total       Decimal   @db.Decimal(12, 2)
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id])
  categories  Category[]
  expenses    Expense[]
  checklist   ChecklistCategory[]
  checklistItems ChecklistItem[]
  timeline    TimelineEvent[]

  @@index([userId])
}

model Category {
  id         String   @id @default(cuid())
  budgetId   String
  name       String
  allocated  Decimal  @db.Decimal(12, 2)
  spent      Decimal  @default(0) @db.Decimal(12, 2)
  color      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  budget     Budget   @relation(fields: [budgetId], references: [id])
  expenses   Expense[]

  @@index([budgetId])
}

model Expense {
  id          String   @id @default(cuid())
  budgetId    String
  categoryId  String
  name        String
  amount      Decimal  @db.Decimal(12, 2)
  projected   Decimal? @db.Decimal(12, 2)
  date        DateTime @default(now())
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  budget      Budget   @relation(fields: [budgetId], references: [id])
  category    Category @relation(fields: [categoryId], references: [id])

  @@index([budgetId])
  @@index([categoryId])
}

model ChecklistCategory {
  id        String           @id @default(cuid())
  budgetId  String
  name      String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  budget    Budget           @relation(fields: [budgetId], references: [id])
  items     ChecklistItem[]

  @@index([budgetId])
}

model ChecklistItem {
  id            String   @id @default(cuid())
  budgetId      String
  categoryId    String
  name          String
  completed     Boolean  @default(false)
  lastUpdated   DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  budget        Budget           @relation(fields: [budgetId], references: [id])
  category      ChecklistCategory @relation(fields: [categoryId], references: [id])

  @@index([budgetId])
  @@index([categoryId])
}

model TimelineEvent {
  id        String   @id @default(cuid())
  budgetId  String
  name      String
  date      DateTime
  eventTime String
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  budget    Budget   @relation(fields: [budgetId], references: [id])

  @@index([budgetId])
  @@index([date])
}
